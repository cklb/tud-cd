    tudscrfonts.sty,%
    8r0m6.fd,%
    8rlun.fd,%
    oml0m6.fd,%
    omllun.fd,%
    oms0m6.fd,%
    omslun.fd,%
    ot10m6.fd,%
    ot1lun.fd,%
    ot1lunt.fd,%
    t10m6.fd,%
    t1lun.fd,%
    t1lunt.fd,%
    ts10m6.fd,%
    ts1lun.fd,%
    ts1lunt.fd%
  \do{%
    \IfFileExists{\@tudfontfile}{}{\@check@tud@fontstrue}%
  }
